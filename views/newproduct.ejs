<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<head>
  <title>Adminisztráció</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

<%- include ('adminmenu') -%>
<h5><%= (typeof products === 'undefined') ? 'Új termék létrehozása' : 'Termék módosítása'%></h5>
<!-- enctype=multipart/form-data"-->
<form method="POST">
<div class="form-group">
  <label for="formGroupUsernameInputInput" class="form-label">Termék neve</label>
  <input type="text" class="form-control" id="name" placeholder="Név" name = "name" value="<%= typeof products === 'undefined' ? "" : products.name%>">
</div>
<div class="form-group">
  <label for="formGroupUsernameInputInput" class="form-label">Kategória</label>
  <div>
    <form id="user-form">
      <div id="app">
        <div>
          <select name="category" id="condition">
            <option value  ="" ></option>
            <% if (typeof products !== 'undefined'){%>

            <option <%if(products.category =='Italok' ){%> selected <%}%>>Italok</option>
            <option <%if(products.category =='Alkohol'){%> selected <%}%>>Alkohol</option>
            <option <%if(products.category =='Édességek'){%> selected <%}%>>Édességek</option>
            <% } else {%>
            <option >Italok</option>
            <option >Alkohol</option>
            <option >Édességek</option>
            <% } %>
          </select>
        </div>
      </div>
    </form>
</div>
<div class="form-group">
  <label for="formGroupPasswordUnput" class="form-label">Darabszám</label>
  <input type="text" class="form-control" id="quantity" placeholder="Darabszám" name="quantity" value="<%=typeof products === 'undefined' ? "" : products.quantity%>" >
</div>
<div class="form-group">
  <label for="formGroupPasswordUnput" class="form-label">Ár</label>
  <input type="text" class="form-control" id="price" placeholder="Ár" name="price" value="<%=typeof products === 'undefined' ? "" : products.price%>" >
</div>
<div class="col-md-12 ">
  <input type="submit" class="btn btn-primary d-block" value="Mentés" />
  <a class="btn btn-primary d-block" href="/adminpage">Vissza</a>
</div>
</div>
</form>
<%- include ('footer') -%>
